{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    //! añadí esto para ver si funcionaba la arroba @
    // "baseUrl": "src",
    // "paths": {
    //   "@/*": ["./*"]
    // }
  },
  //! elimino de typescript los archivos *.vue
  // "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
